<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_recipe_shortcut"
            android:layout_width="@dimen/restaurant_icon_size"
            android:layout_height="@dimen/restaurant_icon_size"
            android:layout_marginLeft="14.0dip"
            android:layout_marginTop="12.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/pic_hanbao2"/>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:paddingBottom="4.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="12.0dip" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/tv_recipe_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:textColor="#ff494c5b"
                    android:textSize="17.0sp"
                    android:text="recipe name"/>


                <ImageView
                    android:id="@+id/iv_recipe_favor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/tv_recipe_name"
                    android:layout_alignRight="@id/tv_recipe_name"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/food_list_favor"
                    android:visibility="gone"/>

                <com.rey.material.widget.LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ï¿¥"/>


                    <TextView
                        android:id="@+id/tv_recipe_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="price"/>

                </com.rey.material.widget.LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4.0dip"
                android:paddingRight="10.0dip" >


                <RatingBar
                    android:id="@+id/rbar_recipe_rate"
                    style="@style/RatingBar.Grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progress="80"/>

                <TextView
                    android:id="@+id/tv_recipe_rate_numbers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5.0dip"
                    android:layout_toRightOf="@id/rbar_recipe_rate"
                    android:includeFontPadding="false"
                    android:textColor="@color/gray_txt"
                    android:textSize="12.0sp"
                    android:text="what's this"/>

                <TextView
                    android:id="@+id/tv_recipe_sales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/foodlist_bg_foodnum"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingBottom="1.0dip"
                    android:paddingLeft="5.0dip"
                    android:paddingRight="5.0dip"
                    android:textColor="@android:color/white"
                    android:textSize="14.0sp"
                    android:text="sales"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_recipe_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8.0dip"
                android:layout_marginTop="10.0dip"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="#ff999999"
                android:textSize="12.0sp"
                android:text="hanbugur in cai xiao dou"/>

        </LinearLayout>
    </LinearLayout>
